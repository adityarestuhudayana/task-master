# Backend Environment Variables

PORT=3000
DATABASE_URL=postgres://user:password@localhost:5432/taskmaster
BETTER_AUTH_SECRET=your_better_auth_secret_here
BETTER_AUTH_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:5173

# EMAIL (SMTP / Nodemailer)
# Untuk Gmail, gunakan SMTP_SERVICE=gmail dan App Password untuk SMTP_PASS
SMTP_SERVICE=gmail
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_gmail_app_password
SMTP_FROM=noreply@taskmaster.app
# Untuk provider lain, gunakan host/port:
# SMTP_HOST=smtp.mailtrap.io
# SMTP_PORT=587

# STORAGE (CLOUDINARY)
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret
VITE_CLOUDINARY_CLOUD_NAME=your_cloud_name

# MONITORING
SENTRY_DSN=https://your-sentry-dsn

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
